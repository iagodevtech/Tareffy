# ========================================
# TAREFFY - CONFIGURAÇÕES DE AMBIENTE
# ========================================

# ========================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ========================================
DATABASE_URL="postgresql://tareffy_user:tareffy_password@localhost:5432/tareffy"

# ========================================
# CONFIGURAÇÕES DO SERVIDOR
# ========================================
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# ========================================
# CONFIGURAÇÕES DE AUTENTICAÇÃO
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ========================================
# CONFIGURAÇÕES DE EMAIL
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@tareffy.iagodev.online

# ========================================
# CONFIGURAÇÕES DE NOTIFICAÇÕES PUSH
# ========================================
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# ========================================
# CONFIGURAÇÕES DE UPLOAD
# ========================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760 # 10MB
ALLOWED_FILE_TYPES=image/*,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# ========================================
# CONFIGURAÇÕES DE REDIS (OPCIONAL)
# ========================================
REDIS_URL=redis://localhost:6379

# ========================================
# CONFIGURAÇÕES DE LOG
# ========================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# ========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ========================================
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# CONFIGURAÇÕES DE MONITORAMENTO
# ========================================
ENABLE_METRICS=true
METRICS_PORT=9090

# ========================================
# CONFIGURAÇÕES DE BACKUP
# ========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * * # Daily at 2 AM
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30

# ========================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ========================================
DEBUG=true
ENABLE_SWAGGER=true
ENABLE_LOGGING=true

